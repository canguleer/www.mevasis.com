<!-- Contact info list -->
<section class="contact-info">
    <div class="container">
        <ul class="contact-info-list">
            <li><span class="icon flaticon-signs"></span>Y.T.Ü. Davutpaşa Kampüsü<br>Teknoloji Geliştirme Bölgesi A1 Blok 1B17</li>
