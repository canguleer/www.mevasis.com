@model IEnumerable<MevaPro.Models.Haberler>
@{
    ViewBag.Title = "KategoriHaber";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!-- Our Projects -->
<section class="project-section sp-two">
    <div class="container">
        <div class="mixitup-gallery">
            <!--Filter-->
            <div class="filters clearfix">

                @{
                    Html.RenderAction("KategorilerPartial", "Home");

                }


            </div>
            <div class="filter-list row clearfix">
               


                @foreach (var item in Model)
                {
                    <div class="project-block-two mix Business Energy al col-lg-4 col-md-6">
                        <div class="inner-box">
                            <div class="image">
                                <img src="~/@item.Foto" style="width:350px; height:250px;" alt="">
                            </div>
                            <div class="lower-box">
                                <div class="caption">
                                    <h4><a href="project-details.html">@item.Baslik</a></h4>
                                    <div class="text" style="text-align:justify;">@string.Format("{0: dd MMMM yyyy}", item.Tarih)</div>
                                    <div class="link-btn"><a href="#" class="theme-btn btn-style-one">Daha Fazla Oku</a></div>
                                </div>
                            </div>
                        </div>

                    </div>
                }

            </div>

        </div>
    </div>
</section>

