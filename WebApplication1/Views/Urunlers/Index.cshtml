@model IEnumerable<MevaPro.Models.Urunler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container" pb-5>
    <h2 style="text-align:center;">Ürünler</h2>

    <p>
        @Html.ActionLink(" Ürün Ekle", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Baslik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KısaIcerik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Icerik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Baslik)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KısaIcerik)
            </td>
            <td>
                @Html.Raw(item.Icerik)
            </td>
            <td>
                <img width="75" height="80" src="@item.Foto" />
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.UrunId }, new { @class = "btn btn-success" })
                @Html.ActionLink("Sil", "Delete", new { id = item.UrunId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
        }

    </table>
</div>