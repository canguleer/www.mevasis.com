@model IEnumerable<MevaPro.Models.Uye>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div class="container" pb-5>
    <h2 style="text-align:center;">Üyeler</h2>

    <p>
        @Html.ActionLink("Üye Ekle", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AdSoyad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sifre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Yetki.Yetki1)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AdSoyad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sifre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Yetki.Yetki1)
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.UyeId }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Sil", "Delete", new { id = item.UyeId }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>